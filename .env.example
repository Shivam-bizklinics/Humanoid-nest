# =============================================================================
# HUMANOID PROJECT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=humanoid_db

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# =============================================================================
# META (FACEBOOK/INSTAGRAM/WHATSAPP) CONFIGURATION
# =============================================================================
# Facebook App Configuration
META_CLIENT_ID=your_facebook_app_id
META_CLIENT_SECRET=your_facebook_app_secret
META_REDIRECT_URI=http://localhost:3000/auth/meta/callback
META_API_VERSION=v18.0

# =============================================================================
# NOTICE
# =============================================================================
# 1. Never commit this file with real values
# 2. Use strong, unique secrets for production
# 3. These are the only environment variables currently used in the project
